<!DOCTYPE html>
<html>
<head>
  <title>As Flash</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<header>
    <div class="navbar">
        <div class="navbar-inner">
            <div class="container">
                <a href="/" class="brand">AsFlash</a>
                <!--form class="navbar-search pull-right" action="/search">
                    <input type="text" class="search-query span2" placeholder="Search" name="words">
                </form-->
                <a href="mailto:mktsz@mail.ru" class="navbar-search pull-right">mktsz@mail.ru</a>
            </div>
        </div>
        <% if @section || @portfolio %>
            <%= render :partial => 'layouts/breadcrumbs' %>
        <% end %>
    </div>
</header>

<div class="container">
    <% unless notice.blank? %>
        <div class="alert alert-success">
            <a class="close" data-dismiss="alert">?</a>
            <span><%= notice %></span>
        </div>
    <% end %>

    <% unless alert.blank? %>
        <div class="alert alert-danger">
            <a class="close" data-dismiss="alert">?</a>
            <span><%= alert %></span>
        </div>
    <% end %>

    <div id="page" class="row">
        <div class="span2">
            <%= render :partial => 'layouts/main_menu' %>
        </div>       
        <div class="span10">
            <%= yield %>
        </div>
    </div>
</div>

<footer>
    <div class="modal-footer">
        
    </div>
</footer>

</body>
</html>
